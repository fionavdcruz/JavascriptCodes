<body>
    <br />
    <hr />
    <script type="text/javascript">
        var qry = confirm("Are you sure you want to send this file to the recycle bin?");
        if (qry)
            document.write(" <br/> You have moved the file to the recycle bin");
        else
            document.write(" <br/>.The file is not moved.");
    </script>

</body>
